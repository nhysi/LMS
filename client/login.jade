template(name="loginLayout")
  body
    h1 Something
    +yield

template(name="loginModal")
  .container
    .row
      .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
        .login-panel.panel.panel-default
          .panel-heading
            a.close(href="/") &#215;
            h3.panel-title Connexion
          .panel-body
            +loginForm

template(name="loginForm")
  form#login-form(role="form")
    fieldset
      .form-group
        input#login-email.form-control(type="email", placeholder="E-mail", name="email", autofocus="")
      .form-group
        input#login-password.form-control(type="password", placeholder="Mot de Passe", name="password", value="")
      if errorMessage
        .row
          .col-sm-12.col-xs-12
            .alert.alert-danger
              | #{errorMessage}
      if currentUserMessage
        .row
          .col-sm-12.col-xs-12
            .alert.alert-success
              | #{currentUserMessage}
      .row
        .col-sm-4.col-xs-4
          input#login-button.btn-success.form-control(type="submit", value="Connexion")
        .col-sm-2.col-xs-2.col-sm-offset-1.col-xs-offset-1
          p ou
        .col-sm-4.col-xs-4
          button#sign-up-button.btn.btn-link.form-control(type="button") Inscription

